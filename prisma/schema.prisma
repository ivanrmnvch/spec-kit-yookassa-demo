// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client"
  output   = "./generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id        String   @id @default(uuid()) @db.Uuid
  email     String   @unique
  name      String?
  createdAt DateTime @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @map("updated_at") @db.Timestamptz(6)

  payments Payment[]

  @@index([email])
  @@map("users")
}

model Payment {
  id                 String    @id @default(uuid()) @db.Uuid
  userId             String    @map("user_id") @db.Uuid
  yookassaPaymentId  String    @unique @map("yookassa_payment_id")
  amount             Decimal   @db.Decimal(10, 2)
  currency           String    @default("RUB")
  status             String // "pending" | "succeeded" | "canceled"
  paid               Boolean   @default(false)
  confirmationUrl    String?   @map("confirmation_url")
  confirmationType   String?   @map("confirmation_type")
  cancellationParty  String?   @map("cancellation_party")
  cancellationReason String?   @map("cancellation_reason")
  canceledAt         DateTime? @map("canceled_at") @db.Timestamptz(6)
  paymentMethodType  String?   @map("payment_method_type")
  description        String?   @db.Text
  metadata           Json?
  createdAt          DateTime  @default(now()) @map("created_at") @db.Timestamptz(6)
  updatedAt          DateTime  @updatedAt @map("updated_at") @db.Timestamptz(6)
  capturedAt         DateTime? @map("captured_at") @db.Timestamptz(6)

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([status])
  @@index([yookassaPaymentId])
  @@map("payments")
}
